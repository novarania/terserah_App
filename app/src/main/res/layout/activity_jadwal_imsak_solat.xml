<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.aceculture.terserahapp.jadwal_imsak_solat"
    android:background="@drawable/bg_mesjid2"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:layout_below="@+id/text_menu"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#37B559"
        android:id="@+id/frame_menu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Jadwal Imsak dan Sholat"
            android:textStyle="bold"
            android:id="@+id/text_menu"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal|top"
            android:textColor="@android:color/white"
            android:typeface="sans" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:background="#3acb5d"
        android:id="@+id/frame_clock"
        android:layout_below="@+id/frame_menu"
        android:layout_marginTop="36dp"
        android:layout_alignRight="@+id/frame_menu"
        android:layout_alignEnd="@+id/frame_menu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textClock"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            android:layout_gravity="center_horizontal|top"
            android:textColor="#ffffff"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textIsSelectable="false" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/icon_jam"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="85dp"
            android:src="@drawable/icon_jam"
            android:layout_gravity="left|top" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:background="#3acb5d"
        android:id="@+id/frame_countdown_sholat"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/frame_clock"
        android:layout_alignLeft="@+id/frame_clock"
        android:layout_alignStart="@+id/frame_clock"
        android:layout_alignRight="@+id/frame_clock"
        android:layout_alignEnd="@+id/frame_clock">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(misal: 02.20 menuju Sholat...)"
            android:paddingLeft="10dp"
            android:id="@+id/text_countdown"
            android:layout_gravity="center_horizontal|top"
            android:textColor="#ffffff" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/countdown"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="45dp"
            android:src="@drawable/countdown"
            android:layout_gravity="left|center_vertical" />
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="99dp"
        android:layout_height="100dp"
        android:layout_below="@+id/frame_countdown_sholat"
        android:layout_alignLeft="@+id/frame_countdown_sholat"
        android:layout_alignStart="@+id/frame_countdown_sholat"
        android:layout_toLeftOf="@+id/frame"

        android:layout_marginTop="40dp"
        android:id="@+id/linearLayout_imsak"
        android:background="#3acb5d">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Imsak"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingTop="17dp"
            android:id="@+id/text_imsak"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4:10 AM"

            android:layout_gravity="center_horizontal"
            android:paddingTop="20dp"
            android:id="@+id/waktu_imsak"
            android:textColor="#ffffff"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="99dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/linearLayout_imsak"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout_subuh"
        android:layout_centerVertical="true"
        android:background="#3acb5d" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subuh"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingTop="17dp"
            android:id="@+id/text_subuh"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4:25 AM"
            android:paddingTop="20dp"
            android:id="@+id/waktu_subuh"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="99dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/linearLayout_subuh"
        android:layout_alignRight="@+id/frame_countdown_sholat"
        android:layout_alignEnd="@+id/frame_countdown_sholat"
        android:id="@+id/linearLayout_zuhur"
        android:background="#3acb5d" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dzuhur"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:paddingTop="17dp"
            android:id="@+id/text_dzuhur"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00 PM"
            android:layout_gravity="center_horizontal"
            android:paddingTop="20dp"
            android:id="@+id/waktu_dzuhur"
            android:textColor="#ffffff"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="99dp"
        android:layout_height="100dp"
        android:id="@+id/linearLayout_asar"
        android:background="#3acb5d"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asar"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:paddingTop="17dp"
            android:id="@+id/text_asar"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15:05 PM"
            android:layout_gravity="center_horizontal"
            android:paddingTop="20dp"
            android:id="@+id/waktu_asar"
            android:textColor="#ffffff"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="99dp"
        android:layout_height="100dp"
        android:id="@+id/linearLayout_isya"
        android:layout_alignTop="@+id/linearLayout_maghrib"
        android:layout_alignLeft="@+id/linearLayout_zuhur"
        android:layout_alignStart="@+id/linearLayout_zuhur"
        android:background="#3acb5d" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Isya"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:paddingTop="17dp"
            android:id="@+id/text_isya"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18:00 PM"
            android:layout_gravity="center_horizontal"
            android:paddingTop="20dp"
            android:id="@+id/waktu_isya"
            android:textColor="#ffffff"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="99dp"
        android:layout_height="100dp"
        android:id="@+id/linearLayout_maghrib"
        android:background="#3acb5d"
        android:layout_alignTop="@+id/linearLayout_asar"
        android:layout_alignLeft="@+id/linearLayout_subuh"
        android:layout_alignStart="@+id/linearLayout_subuh">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maghrib"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:paddingTop="17dp"
            android:id="@+id/text_maghrib"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17:35 PM"
            android:layout_gravity="center_horizontal"
            android:paddingTop="20dp"
            android:id="@+id/waktu_maghrib"
            android:textColor="#ffffff"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

</RelativeLayout>
