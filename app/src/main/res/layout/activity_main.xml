<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_mesjid"
    tools:context=".MainActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buka_btn"
        android:src="@drawable/btn_tempatmakan"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/jadwal_btn"
        android:layout_alignStart="@+id/jadwal_btn" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jadwal_btn"
        android:src="@drawable/jadwalsolat"
        android:layout_above="@+id/buka_btn"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
